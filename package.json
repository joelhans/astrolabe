{
  "name": "astrolabe",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "next-remote-watch ./content",
    "dev": "next dev",
    "build": "next build",
    "serve": "next start",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "next lint --fix --dir pages --dir src/components --dir lib --dir layouts --dir scripts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.2",
    "autoprefixer": "^10.4.0",
    "d3": "^5.5.0",
    "esbuild": "^0.13.13",
    "image-size": "1.0.0",
    "mdx-bundler": "^8.0.0",
    "moment": "^2.29.4",
    "next": "^13.0.1",
    "next-themes": "^0.2.0",
    "postcss": "^8.3.5",
    "preact": "^10.6.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.2.0",
    "rehype-slug": "^5.0.1",
    "tailwindcss": "^3.1.4",
    "unist-util-visit": "^4.0.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "12.1.4",
    "@svgr/webpack": "^6.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.29.0",
    "eslint-config-next": "12.1.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.3.1",
    "file-loader": "^6.0.0",
    "globby": "11.0.3",
    "husky": "^6.0.0",
    "lint-staged": "^11.2.0",
    "next-remote-watch": "^1.0.0",
    "prettier": "2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(md|mdx)": [
      "node scripts/updateFrontmatter.mjs"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css)": [
      "prettier --write"
    ]
  }
}
