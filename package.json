{
  "name": "joelhans-com",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "next-remote-watch ./content",
    "dev": "next dev",
    "build": "node scripts/generate-links.js && next build",
    "serve": "next start",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "next lint --fix --dir pages --dir src/components --dir lib --dir layouts --dir scripts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/typography": "^0.4.1",
    "autoprefixer": "^10.2.5",
    "esbuild": "^0.12.15",
    "gray-matter": "^4.0.2",
    "image-size": "1.0.0",
    "mdx-bundler": "^8.0.0",
    "next": "11.1.0",
    "next-seo": "^4.26.0",
    "next-themes": "^0.0.14",
    "postcss": "^8.3.5",
    "preact": "^10.5.13",
    "prism-react-renderer": "^1.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.2.0",
    "react-select": "^4.3.0",
    "reading-time": "1.3.0",
    "rehype-katex": "^6.0.0",
    "rehype-prism-plus": "^0.0.5",
    "remark-autolink-headings": "^7.0.0",
    "remark-footnotes": "^4.0.0",
    "remark-gfm": "^2.0.0",
    "remark-math": "^5.0.0",
    "remark-slug": "^7.0.0",
    "sharp": "^0.28.3",
    "tailwindcss": "^2.2.7",
    "unist-util-visit": "^4.0.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "11.1.0",
    "@svgr/webpack": "^5.5.0",
    "cross-env": "^7.0.3",
    "dedent": "^0.7.0",
    "eslint": "^7.29.0",
    "eslint-config-next": "11.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "file-loader": "^6.0.0",
    "globby": "11.0.3",
    "husky": "^6.0.0",
    "inquirer": "^8.1.1",
    "lint-staged": "^11.2.0",
    "next-remote-watch": "^1.0.0",
    "prettier": "2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(md|mdx)": [
      "node scripts/updateFrontmatter.mjs"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css)": [
      "prettier --write"
    ]
  }
}
